unit unGlobal;

interface

uses
   System.SysUtils, System.Classes, Data.DB;

var
  SisOn                     : Boolean = False;
  HoraAutent                : TDateTime;

  //Exemplo -> Varzea Grande - MT
  FilialCompleta            : String;

  //Exemplo -> 01001005
  FilialPadrao              : String;

  //Exemplo -> 003591
  CodigoUsuario             : String;

  //Exemplo -> Matheus Santos Brito
  NomeCompletro             : String;

  {
    Uso para saber quando posso fechar o
    unMensagem em alguns forms
  }
  btnFechar                 : Boolean;

  indexPerfil               : Integer;

  {
    Uso essa variavel para definir quando pode ser mostrado o
    SELECT empresa no form Principal

    - Quando eu clico no botão de liberar regra eu o defino como falso para
    quando ele voltar para o menu principal e não abre novamente o form de
    empresa.

    - Se apertar em LOGOFF vai ser setado como TRUE, pois quando ele fizer o
    login novamente vai ter que aparecer novamente as empresas para liberar
    regra.
  }
  CarregaSelectEmpresa      : Boolean;


  HoraAutenticado           : TDateTime;

  carregando                : Boolean;

  ip                        : String = '192.168.100.104';
const
  ARQ_INI = 'config.ini';
implementation

end.

